<div id="post_content">
	<h2><%= @post.title %></h2>
	<p><%= @post.content %></p>
	<div class="btn-group">
		<%= link_to "Home", root_path, class: "btn btn-default"  %>
		<%= link_to "Edit", edit_post_path(@post), class: "btn btn-default" %>
		<%= link_to "Delete", posts_path(@post), method: :delete, data: {confirm: "Are you sure" }, class: "btn btn-danger" %>
	</div>
</div>